{
  "name": "basics",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "_start": "node index.js",
    "start": "NODE_ENV=development npm run _start",
    "prerestart": "webpack --mode=development",
    "restart": "NODE_ENV=development nodemon index.js",
    "lint": "node ./node_modules/.bin/eslint *.js **/*.js",
    "pretest": "npm run lint",
    "test": "node ./node_modules/.bin/mocha --reporter spec --exit \"server/**/*.spec.js\" \"client/**/*.spec.js\"",
    "prewatch": "npm run test",
    "watch": "onchange '**/*.js' -- npm run test",
    "selenium-setup": "./node_modules/.bin/selenium-standalone install",
    "selenium": "./node_modules/.bin/selenium-standalone start",
    "wdio-setup": "./node_modules/.bin/wdio config",
    "e2e": "NODE_ENV=development ./node_modules/.bin/wdio wdio.conf.js",
    "e2e-watch": "NODE_ENV=development ./node_modules/.bin/wdio wdio.conf.js --watch",
    "clean": "rm ./server/public/javascript/*",
    "predev-release": "npm run clean",
    "dev-release": "webpack",
    "preprod-release": "npm run clean",
    "prod-release": "webpack --mode=production",
    "prestart-production": "npm run prod-release",
    "start-production": "NODE_ENV=production npm run _start"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    }
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "jsdom": "^11.12.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.3",
    "onchange": "^3.3.0",
    "selenium-standalone": "^6.14.0",
    "wdio-mocha-framework": "^0.5.13",
    "wdio-selenium-standalone-service": "0.0.10",
    "wdio-spec-reporter": "^0.1.5",
    "webdriverio": "^4.12.0",
    "webpack": "^4.8.2",
    "webpack-cli": "^2.1.3"
  },
  "dependencies": {}
}
